<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="10dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a Complain"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="30dp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/c_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textColorHint="#000"
        android:ems="10"
        android:inputType="text"
        android:hint="Category" />

    <EditText
        android:id="@+id/c_severity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:ems="10"
        android:inputType="text"
        android:hint="Severity"
        android:textColorHint="#000"/>

    <EditText
        android:id="@+id/c_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:ems="10"
        android:inputType="text"
        android:hint="Description"
        android:textColorHint="#000"/>

    <ImageView
        android:id="@+id/new_memory_selected_image"
        android:src="@drawable/ic_baseline_image_24"
        android:layout_width="match_parent"
        android:layout_height="150dp" />


    <Button
        android:onClick="openGallery"
        android:text="Add Photo from Gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3700B3"
        android:textColor="#fff"

        android:textAllCaps="false"/>

    <Button
        android:layout_marginTop="5dp"
        android:onClick="openCamera"
        android:text="Add Photo from Camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3700B3"
        android:textAllCaps="false"
        android:textColor="#fff"/>


    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/addNewUserButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3700B3"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:text="Add a Complain"/>





</LinearLayout>